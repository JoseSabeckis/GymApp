<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXEvolution.Clases" Title="Lista Clases">

    <StackLayout>
        <!-- Place new controls here -->

        <ListView HasUnevenRows="True" x:Name="ItemListClases">

            <ListView.ItemTemplate>

                <DataTemplate>

                    <ViewCell>

                        <StackLayout Padding="10" >

                            <Label Text="{Binding Nombre}" LineBreakMode="NoWrap" FontSize="Large"></Label>
                            <Label Text="{Binding Descripcion}"  LineBreakMode="NoWrap" FontSize="Large"></Label>
                            <Label Text="{Binding ClaseDetalle}"  LineBreakMode="NoWrap" FontSize="Medium"></Label>

                        </StackLayout>

                    </ViewCell>

                </DataTemplate>


            </ListView.ItemTemplate>

        </ListView>

    </StackLayout>


</ContentPage>