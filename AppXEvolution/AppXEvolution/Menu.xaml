<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXEvolution.Menu"
             xmlns:local="clr-namespace:AppXEvolution">
    <NavigationPage.TitleView>
        <Label Text="Evolution Training Center" HorizontalOptions="Center"></Label>
    </NavigationPage.TitleView>


    <Grid VerticalOptions="CenterAndExpand" BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="ButtonClases"
             Text="Clases" BackgroundColor="OrangeRed" BorderRadius="40" Padding="5" Margin="10"
             Grid.Row="3"/>

        <Button x:Name="ButtonRutinas"
             Text="Rutinas" BackgroundColor="DarkOrange" BorderRadius="40" Padding="5" Margin="10"
             Grid.Row="4"/>
        <ImageButton Grid.Row="5" WidthRequest="100" HeightRequest="100" Source="{local:ImageResource AppXEvolution.rutina.png}" BackgroundColor="Transparent" Padding="5" Margin="10" x:Name="GymEvolution2"></ImageButton>

    </Grid>


</ContentPage>