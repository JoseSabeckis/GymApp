<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXEvolution.Menu" BackgroundColor="Black">
    
    <Grid VerticalOptions="CenterAndExpand" BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label HorizontalOptions="Center" VerticalOptions="Center" TextColor="Orange">-- Bienvenido! --</Label>
        <Label Grid.Row="1"></Label>
        <Button x:Name="ButtonClientes"
             Text="Clientes" BackgroundColor="DarkOrange"
             Grid.Row="2"/>
        <Button x:Name="ButtonClases"
             Text="Clases" BackgroundColor="OrangeRed"
             Grid.Row="3"/>
        <Button x:Name="ButtonRutinas"
             Text="Rutinas" BackgroundColor="DarkOrange"
             Grid.Row="4"/>
        <Button x:Name="ButtonEjercicios"
             Text="Ejercicios" BackgroundColor="OrangeRed"
             Grid.Row="5"/>
        <Label Grid.Row="6"></Label>
    </Grid>

</ContentPage>